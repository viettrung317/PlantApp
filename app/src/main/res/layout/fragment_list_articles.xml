<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ListArticlesFragment">

    <ImageView
        android:id="@+id/imageView73"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle_2_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/ellipse_2"
        app:layout_constraintEnd_toEndOf="@+id/imageView73"
        app:layout_constraintTop_toTopOf="@+id/imageView83" />

    <ImageView
        android:id="@+id/imageView103"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/articles"
        app:layout_constraintBottom_toBottomOf="@+id/imageView73"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtSeachArticles"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/seach"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt13"
        app:layout_constraintTop_toBottomOf="@+id/imageView73" />

    <ImageView
        android:id="@+id/imageView113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/group4_3"
        app:layout_constraintBottom_toBottomOf="@+id/txtSeachArticles"
        app:layout_constraintStart_toStartOf="@+id/txtSeachArticles"
        app:layout_constraintTop_toTopOf="@+id/txtSeachArticles" />

    <TextView
        android:id="@+id/txt13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:paddingRight="10dp"
        android:gravity="top"
        android:text="Articles"
        android:textAppearance="@style/species"
        app:layout_constraintStart_toStartOf="@+id/imgExitArticles"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgExitArticles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="61dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvArticles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtSeachArticles"
        app:layout_constraintStart_toStartOf="@+id/txtSeachArticles"
        app:layout_constraintTop_toBottomOf="@+id/txtSeachArticles" />

</androidx.constraintlayout.widget.ConstraintLayout>